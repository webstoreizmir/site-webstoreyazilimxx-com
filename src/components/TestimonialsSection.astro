---
interface Testimonial {
  name: string;
  role: string;
  comment: string;
}

interface Props {
  testimonials: Testimonial[];
}

const { testimonials } = Astro.props;
---

<section id="testimonials" class="py-32 bg-slate-900 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 32px 32px;"></div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center mb-20">
      <span class="text-[rgb(var(--color-primary))] font-bold tracking-wider uppercase text-sm mb-3 block">Referanslar</span>
      <h2 class="text-4xl md:text-5xl font-heading font-bold text-white">Mutlu Müşterilerimiz</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((t) => (
        <div class="bg-slate-800 p-8 rounded-2xl border border-slate-700 hover:border-[rgb(var(--color-primary))] transition-all duration-300 group hover:-translate-y-1 shadow-2xl">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-12 h-12 rounded-full bg-[rgb(var(--color-primary))] flex items-center justify-center text-white font-bold text-xl shadow-lg">
              {t.name.charAt(0)}
            </div>
            <div>
              <h4 class="font-bold text-white text-lg">{t.name}</h4>
              <p class="text-sm text-[rgb(var(--color-primary))]">{t.role}</p>
            </div>
          </div>
          
          <div class="relative">
             <svg class="absolute -top-2 -left-2 w-8 h-8 text-slate-700 transform -scale-x-100 opacity-50" fill="currentColor" viewBox="0 0 24 24"><path d="M14.017 21L14.017 18C14.017 16.8954 14.9124 16 16.017 16H19.017C19.5693 16 20.017 15.5523 20.017 15V9C20.017 8.44772 19.5693 8 19.017 8H15.017C14.4647 8 14.017 8.44772 14.017 9V11C14.017 11.5523 13.5693 12 13.017 12H12.017V5H22.017V15C22.017 18.3137 19.3307 21 16.017 21H14.017ZM5.0166 21L5.0166 18C5.0166 16.8954 5.91203 16 7.0166 16H10.0166C10.5689 16 11.0166 15.5523 11.0166 15V9C11.0166 8.44772 10.5689 8 10.0166 8H6.0166C5.46432 8 5.0166 8.44772 5.0166 9V11C5.0166 11.5523 4.56889 12 4.0166 12H3.0166V5H13.0166V15C13.0166 18.3137 10.3303 21 7.0166 21H5.0166Z"></path></svg>
             <p class="text-slate-300 italic leading-relaxed pl-6 relative z-10">
               "{t.comment}"
             </p>
          </div>
          
          <div class="flex gap-1 text-yellow-400 mt-6 text-sm">
            ★★★★★
          </div>
        </div>
      ))}
    </div>
  </div>
</section>