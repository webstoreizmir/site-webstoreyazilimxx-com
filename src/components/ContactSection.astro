---
interface ContactInfo {
  address: string;
  phone: string;
  email: string;
  map_query: string;
}

interface Props {
  contact: ContactInfo;
}

const { contact } = Astro.props;
---

<section id="contact" class="py-32 bg-white relative">
  <div class="container-custom">
    <div class="bg-slate-900 rounded-[2.5rem] shadow-2xl overflow-hidden flex flex-col lg:flex-row min-h-[600px]">
      
      <!-- Info Side -->
      <div class="w-full lg:w-5/12 bg-[rgb(var(--color-primary))] p-12 lg:p-16 text-white flex flex-col justify-between relative overflow-hidden">
        <!-- Pattern Overlay -->
        <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 24px 24px;"></div>
        
        <div class="relative z-10">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">İletişime Geçin</h2>
          <p class="text-white/80 mb-12 text-lg leading-relaxed">
            Projelerinizi hayata geçirmek için sabırsızlanıyoruz. Hemen bize ulaşın.
          </p>
          
          <div class="space-y-8">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-xl bg-white/20 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
              </div>
              <div>
                <p class="text-white/60 text-sm mb-1">Adresimiz</p>
                <p class="font-medium text-lg">{contact.address}</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-xl bg-white/20 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
              </div>
              <div>
                <p class="text-white/60 text-sm mb-1">Telefon</p>
                <p class="font-medium text-lg">{contact.phone}</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-xl bg-white/20 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
              </div>
              <div>
                <p class="text-white/60 text-sm mb-1">E-posta</p>
                <p class="font-medium text-lg">{contact.email}</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Form Side -->
      <div class="w-full lg:w-7/12 bg-white p-12 lg:p-16">
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-bold text-slate-700 mb-2 uppercase tracking-wide">Adınız</label>
              <input type="text" class="input-field" placeholder="Adınız" />
            </div>
            <div>
              <label class="block text-sm font-bold text-slate-700 mb-2 uppercase tracking-wide">Soyadınız</label>
              <input type="text" class="input-field" placeholder="Soyadınız" />
            </div>
          </div>
          <div>
            <label class="block text-sm font-bold text-slate-700 mb-2 uppercase tracking-wide">E-posta</label>
            <input type="email" class="input-field" placeholder="ornek@sirket.com" />
          </div>
          <div>
            <label class="block text-sm font-bold text-slate-700 mb-2 uppercase tracking-wide">Mesajınız</label>
            <textarea rows="4" class="input-field" placeholder="Size nasıl yardımcı olabiliriz?"></textarea>
          </div>
          <button type="submit" class="btn-primary w-full text-lg">
            Mesajı Gönder
          </button>
        </form>
      </div>
    </div>
    
    <!-- Map Section (Full Width Below) -->
    <div class="mt-16 rounded-3xl overflow-hidden shadow-xl border border-gray-200 h-[400px]">
        <iframe 
        width="100%" 
        height="100%" 
        frameborder="0" 
        style="border:0; filter: grayscale(100%) contrast(1.2);"
        src={`https://maps.google.com/maps?q=${encodeURIComponent(contact.map_query)}&t=&z=14&ie=UTF8&iwloc=&output=embed`}
        allowfullscreen
        ></iframe>
    </div>
  </div>
</section>