---
// Footer'a veri çekmek için props tanımlıyoruz
interface ContactInfo {
  address: string;
  phone: string;
  email: string;
}

interface Props {
  title: string;
  description: string;
  contact: ContactInfo;
}

const { title, description, contact } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="bg-black text-white pt-20 pb-10 border-t border-slate-900">
  <div class="container-custom">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-16">
      
      <!-- Brand & About -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 rounded-xl bg-[rgb(var(--color-primary))] flex items-center justify-center font-bold text-xl">
              {title.charAt(0)}
            </div>
            <span class="text-2xl font-bold font-heading tracking-tight">{title}</span>
        </div>
        <p class="text-slate-400 max-w-md leading-relaxed text-sm">
          {description.length > 150 ? description.substring(0, 150) + "..." : description}
        </p>
        
        <div class="mt-8 flex flex-col space-y-3 text-slate-400 text-sm">
          <div class="flex items-start gap-3">
             <svg class="w-5 h-5 text-[rgb(var(--color-primary))] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
             <span>{contact.address}</span>
          </div>
          <div class="flex items-center gap-3">
             <svg class="w-5 h-5 text-[rgb(var(--color-primary))] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
             <a href={`mailto:${contact.email}`} class="hover:text-white transition-colors">{contact.email}</a>
          </div>
          <div class="flex items-center gap-3">
             <svg class="w-5 h-5 text-[rgb(var(--color-primary))] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
             <a href={`tel:${contact.phone}`} class="hover:text-white transition-colors">{contact.phone}</a>
          </div>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-bold mb-6 text-white">Menü</h4>
        <ul class="space-y-4 text-sm">
          <li><a href="#hero" class="text-slate-400 hover:text-[rgb(var(--color-primary))] transition-colors">Ana Sayfa</a></li>
          <li><a href="#about" class="text-slate-400 hover:text-[rgb(var(--color-primary))] transition-colors">Hakkımızda</a></li>
          <li><a href="#services" class="text-slate-400 hover:text-[rgb(var(--color-primary))] transition-colors">Hizmetler</a></li>
          <li><a href="#testimonials" class="text-slate-400 hover:text-[rgb(var(--color-primary))] transition-colors">Referanslar</a></li>
          <li><a href="#contact" class="text-slate-400 hover:text-[rgb(var(--color-primary))] transition-colors">İletişim</a></li>
        </ul>
      </div>
      
      <!-- Legal -->
      <div>
        <h4 class="text-lg font-bold mb-6 text-white">Kurumsal</h4>
        <ul class="space-y-4 text-sm">
          <li><a href="#" class="text-slate-400 hover:text-[rgb(var(--color-primary))] transition-colors">Gizlilik Politikası</a></li>
          <li><a href="#" class="text-slate-400 hover:text-[rgb(var(--color-primary))] transition-colors">Kullanım Şartları</a></li>
          <li><a href="#" class="text-slate-400 hover:text-[rgb(var(--color-primary))] transition-colors">KVKK Aydınlatma Metni</a></li>
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-slate-900 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-slate-600 text-sm">
        &copy; {currentYear} {title}. Tüm hakları saklıdır.
      </p>
      
      <div class="flex gap-4">
        <!-- Social Icons (Dynamic placeholders) -->
        <a href="#" class="w-10 h-10 rounded-full bg-slate-900 flex items-center justify-center text-slate-500 hover:bg-[rgb(var(--color-primary))] hover:text-white transition-all cursor-pointer border border-slate-800 hover:border-[rgb(var(--color-primary))]">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
        </a>
        <a href="#" class="w-10 h-10 rounded-full bg-slate-900 flex items-center justify-center text-slate-500 hover:bg-[rgb(var(--color-primary))] hover:text-white transition-all cursor-pointer border border-slate-800 hover:border-[rgb(var(--color-primary))]">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
        </a>
      </div>
    </div>
  </div>
</footer>