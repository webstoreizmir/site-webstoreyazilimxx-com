---
interface FAQ {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQ[];
}

const { faqs } = Astro.props;
---

<section class="py-24 bg-slate-50">
  <div class="container-custom max-w-4xl">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-heading font-bold text-slate-900">Sıkça Sorulan Sorular</h2>
      <p class="text-slate-500 mt-4">Aklınıza takılan soruların cevaplarını burada bulabilirsiniz.</p>
    </div>

    <div class="space-y-4">
      {faqs.map((faq) => (
        <details class="group bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden transition-all duration-300 hover:shadow-md">
          <summary class="flex justify-between items-center font-medium cursor-pointer list-none p-6 text-slate-800 hover:text-[rgb(var(--color-primary))] transition-colors">
            <span class="text-lg font-bold">{faq.question}</span>
            <span class="transition group-open:rotate-180">
              <svg fill="none" height="24" shape-rendering="geometricPrecision" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" width="24"><path d="M6 9l6 6 6-6"></path></svg>
            </span>
          </summary>
          <div class="text-slate-600 px-6 pb-6 leading-relaxed border-t border-slate-50 pt-4">
            {faq.answer}
          </div>
        </details>
      ))}
    </div>
  </div>
</section>