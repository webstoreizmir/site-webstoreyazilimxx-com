---
// AKILLI HAKKIMIZDA RESMİ (Dikey/Portrait Format)
function getSmartAbout(keyword: string) {
  const k = keyword ? keyword.toLowerCase() : '';

  // 1. MODA (Terzi, Tasarımcı, Manken)
  if (k.includes('fashion') || k.includes('moda') || k.includes('giyim')) {
    return "https://images.unsplash.com/photo-1537832816519-0439447f0edf?q=80&w=800&auto=format&fit=crop";
  }

  // 2. TEKNOLOJİ (Toplantı, Ekranlar, Startup)
  if (k.includes('tech') || k.includes('yazılım') || k.includes('web')) {
    return "https://images.unsplash.com/photo-1531482615713-2afd69097998?q=80&w=800&auto=format&fit=crop";
  }

  // 3. İNŞAAT (Mimar, Şantiye Şefi, Plan)
  if (k.includes('construction') || k.includes('inşaat') || k.includes('mimari')) {
    return "https://images.unsplash.com/photo-1503387762-592deb58ef4e?q=80&w=800&auto=format&fit=crop";
  }

  // 4. SAĞLIK (Doktor Ekibi, Hastane)
  if (k.includes('health') || k.includes('sağlık') || k.includes('doktor')) {
    return "https://images.unsplash.com/photo-1631217868264-e5b90bb7e133?q=80&w=800&auto=format&fit=crop";
  }

   // 5. YEME & İÇME (Şef, Mutfak)
  if (k.includes('food') || k.includes('yemek') || k.includes('restoran')) {
    return "https://images.unsplash.com/photo-1556910103-1c02745a30bf?q=80&w=800&auto=format&fit=crop";
  }

  // VARSAYILAN (Modern Ofis Toplantısı - Güven verir)
  return "https://images.unsplash.com/photo-1542744173-8e7e53415bb0?q=80&w=800&auto=format&fit=crop";
}

interface Stat {
  label: string;
  value: string;
}

interface Props {
  title: string;
  description: string;
  stats: Stat[];
  imageKeyword: string;
}

const { title, description, stats, imageKeyword } = Astro.props;
const imgUrl = getSmartAbout(imageKeyword);
---

<section id="about" class="py-24 relative overflow-hidden bg-white">
  <div class="container mx-auto px-6">
    <div class="flex flex-col md:flex-row items-center gap-16">
      
      <div class="w-full md:w-1/2 relative group">
        <div class="absolute -top-4 -left-4 w-full h-full border-2 border-[rgb(var(--color-primary))] rounded-3xl -z-10 transform translate-x-4 translate-y-4"></div>
        
        <img 
          src={imgUrl} 
          alt="Hakkımızda" 
          class="relative rounded-3xl shadow-2xl w-full object-cover h-[500px] hover:scale-[1.01] transition-transform duration-700"
        />
        
        <div class="absolute bottom-8 right-[-20px] bg-white p-6 rounded-xl shadow-xl border-l-8 border-[rgb(var(--color-primary))] hidden md:block animate-fade-in-up">
          <p class="text-4xl font-bold text-[rgb(var(--color-primary))]">10+</p>
          <p class="text-xs font-bold text-slate-600 uppercase tracking-wider mt-1">Yıllık Tecrübe</p>
        </div>
      </div>

      <div class="w-full md:w-1/2">
        <span class="text-[rgb(var(--color-primary))] font-bold tracking-wider uppercase text-sm mb-2 block">Markamız</span>
        <h2 class="text-3xl md:text-5xl font-heading font-bold mb-6 text-slate-900 leading-tight">
          {title}
        </h2>
        <p class="text-lg text-slate-600 leading-relaxed font-body mb-10 border-l-4 border-slate-200 pl-4">
          {description}
        </p>
        <div class="grid grid-cols-2 gap-4 mb-10">
          {stats && stats.map(stat => (
            <div class="p-5 rounded-2xl bg-slate-50 border border-slate-100">
              <p class="text-2xl font-bold text-[rgb(var(--color-primary))] mb-1">{stat.value}</p>
              <p class="text-sm font-medium text-slate-500">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>